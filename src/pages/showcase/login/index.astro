---
import { Aside, Icon } from '@astrojs/starlight/components'

import ShowcasePage from '../../../components/ShowcasePage.astro'

export const prerender = false

if (Astro.locals.user) {
  return Astro.redirect('/showcase/')
}

const error = Astro.url.searchParams.get('error')
---

<ShowcasePage title="Showcase - Login">
  {
    error && (
      <Aside type="danger" title="Warning">
        {error}
      </Aside>
    )
  }
  <div class="not-content">
    <a href="/showcase/login/github">
      <Icon name="github" size="1.5rem" />
      Login with GitHub
    </a>
  </div>
</ShowcasePage>

<style>
  div {
    display: flex;
    justify-content: center;
    padding-top: 2rem;
  }

  a {
    align-items: center;
    border-radius: 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    box-shadow: var(--sl-shadow-sm);
    color: var(--sl-color-white);
    display: flex;
    font-size: var(--sl-text-lg);
    font-weight: 600;
    gap: 0.75rem;
    line-height: var(--sl-line-height-headings);
    padding: 1.25rem 1.5rem;
    text-decoration: none;
  }

  a:hover {
    background: var(--sl-color-gray-7, var(--sl-color-gray-6));
    border-color: var(--sl-color-gray-2);
  }
</style>
